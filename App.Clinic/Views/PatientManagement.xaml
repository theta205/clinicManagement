<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:App.Clinic.ViewModels"
    x:Class="App.Clinic.Views.PatientManagementPage"
    x:DataType="viewmodels:PatientManagementViewModel"
    Title="Patient Management">
    
    <ContentPage.BindingContext>
        <viewmodels:PatientManagementViewModel />
    </ContentPage.BindingContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Header with Search and Add -->
        <StackLayout Grid.Row="0" Padding="10" Spacing="10">
            <Label Text="Patient Management" 
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <Entry Grid.Column="0"
                       Text="{Binding Query}"
                       Placeholder="Search patients..."
                       Margin="0,0,10,0" />
                
                <Button Grid.Column="1"
                        Text="Search"
                        Command="{Binding SearchCommand}"
                        Margin="0,0,5,0" />
                
                <Button Grid.Column="2"
                        Text="Add Patient"
                        Command="{Binding AddCommand}"
                        BackgroundColor="LightGreen" />
            </Grid>
        </StackLayout>
        
        <!-- Patient List -->
        <CollectionView Grid.Row="1"
                         ItemsSource="{Binding Patients}"
                         SelectedItem="{Binding SelectedPatient}"
                         Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:PatientViewModel">
                    <Grid Padding="15" Margin="0,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <Frame Grid.Row="0"
                               BackgroundColor="LightGray"
                               Padding="15"
                               CornerRadius="10">
                            <StackLayout>
                                <Label Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding SSN}"
                                       FontSize="14"
                                       TextColor="Gray" />
                                <Label Text="{Binding BirthDate, StringFormat='Born: {0:MM/dd/yyyy}'}"
                                       FontSize="12"
                                       TextColor="Gray" />
                            </StackLayout>
                        </Frame>
                        
                        <StackLayout Grid.Row="1" 
                                     Orientation="Horizontal"
                                     HorizontalOptions="End"
                                     Margin="0,5,0,0">
                            <Button Text="Edit"
                                    Clicked="OnEditClicked"
                                    BackgroundColor="LightBlue"
                                    Margin="0,0,10,0" />
                            <Button Text="Delete"
                                    Clicked="OnDeleteClicked"
                                    BackgroundColor="LightCoral" />
                        </StackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <!-- Footer with Sort Options -->
        <StackLayout Grid.Row="2" 
                      Padding="10"
                      Orientation="Horizontal"
                      HorizontalOptions="Center">
            <Label Text="Sort by:" VerticalOptions="Center" />
            <Picker ItemsSource="{Binding SortChoices}"
                    SelectedItem="{Binding SortChoice}"
                    WidthRequest="150" />
        </StackLayout>
    </Grid>
</ContentPage>
