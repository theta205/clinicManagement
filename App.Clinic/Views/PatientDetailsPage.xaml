<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:App.Clinic.ViewModels"
    x:Class="App.Clinic.Views.PatientDetailsPage"
    x:DataType="viewmodels:PatientDetailsViewModel"
    Title="Patient Details">
    
    <ContentPage.BindingContext>
        <viewmodels:PatientDetailsViewModel />
    </ContentPage.BindingContext>
    
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            
            <!-- Header -->
            <Label Text="Patient Information"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />
            
            <!-- Patient ID (Read-only for existing patients) -->
            <Frame BackgroundColor="LightGray" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Label Text="Patient ID" FontAttributes="Bold" TextColor="Black" />
                    <Label Text="{Binding Id}" TextColor="Black" />
                </StackLayout>
            </Frame>
            
            <!-- Name Entry -->
            <Frame BackgroundColor="White" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Label Text="Name *" FontAttributes="Bold" TextColor="Black" />
                    <Entry Text="{Binding Name}"
                           Placeholder="Enter patient name"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           MaxLength="100" />
                </StackLayout>
            </Frame>
            
            <!-- SSN Entry -->
            <Frame BackgroundColor="White" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Label Text="SSN *" FontAttributes="Bold" TextColor="Black" />
                    <Entry Text="{Binding SSN}"
                           Placeholder="Enter SSN (e.g. 123-45-6789)"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           MaxLength="11"
                           Keyboard="Numeric" />
                </StackLayout>
            </Frame>
            
            <!-- Birth Date Picker -->
            <Frame BackgroundColor="White" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Label Text="Birth Date *" FontAttributes="Bold" TextColor="Black" />
                    <DatePicker Date="{Binding BirthDate}" TextColor="Black" BackgroundColor="LightGray" />
                </StackLayout>
            </Frame>
            
            <!-- Address Entry -->
            <Frame BackgroundColor="White" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Label Text="Address" FontAttributes="Bold" TextColor="Black" />
                    <Editor Text="{Binding Address}"
                            Placeholder="Enter patient address (optional)"
                            TextColor="Black"
                            PlaceholderColor="Gray"
                            HeightRequest="80"
                            MaxLength="500" />
                </StackLayout>
            </Frame>
            
            <!-- Race Entry -->
            <Frame BackgroundColor="White" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Label Text="Race" FontAttributes="Bold" TextColor="Black" />
                    <Entry Text="{Binding Race}"
                           Placeholder="Enter race"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           MaxLength="50" />
                </StackLayout>
            </Frame>
            
            <!-- Gender Entry -->
            <Frame BackgroundColor="White" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Label Text="Gender" FontAttributes="Bold" TextColor="Black" />
                    <Entry Text="{Binding Gender}"
                           Placeholder="Enter gender"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           MaxLength="20" />
                </StackLayout>
            </Frame>
            
            <!-- Diagnoses Entry -->
            <Frame BackgroundColor="White" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Label Text="Diagnoses" FontAttributes="Bold" TextColor="Black" />
                    <Editor Text="{Binding DiagnosesText}"
                            Placeholder="Enter diagnoses (comma-separated)"
                            TextColor="Black"
                            PlaceholderColor="Gray"
                            HeightRequest="80"
                            MaxLength="500" />
                </StackLayout>
            </Frame>
            
            <!-- Prescriptions Entry -->
            <Frame BackgroundColor="White" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Label Text="Prescriptions" FontAttributes="Bold" TextColor="Black" />
                    <Editor Text="{Binding PrescriptionsText}"
                            Placeholder="Enter prescriptions (comma-separated)"
                            TextColor="Black"
                            PlaceholderColor="Gray"
                            HeightRequest="80"
                            MaxLength="500" />
                </StackLayout>
            </Frame>
            
            <!-- Action Buttons -->
            <StackLayout Orientation="Horizontal" 
                         HorizontalOptions="Center"
                         Spacing="20"
                         Margin="0,20,0,0">
                
                <Button Text="Save"
                        Command="{Binding SaveCommand}"
                        BackgroundColor="LightGreen"
                        TextColor="Black"
                        WidthRequest="100"
                        HeightRequest="50" />
                
                <Button Text="Cancel"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="LightCoral"
                        TextColor="Black"
                        WidthRequest="100"
                        HeightRequest="50" />
            </StackLayout>
            
        </StackLayout>
    </ScrollView>
</ContentPage>
