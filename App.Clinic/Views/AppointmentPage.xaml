<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:App.Clinic.ViewModels"
    x:Class="App.Clinic.Views.AppointmentPage"
    x:DataType="viewmodels:AppointmentManagementViewModel"
    Title="Appointments">

    <VerticalStackLayout Padding="16" Spacing="12">

        <Button Text="Add Appointment"
                Command="{Binding AddCommand}"
                HorizontalOptions="End"
                WidthRequest="160" />

        <CollectionView ItemsSource="{Binding Appointments}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedAppointment, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:AppointmentViewModel">
                    <Grid Padding="8" ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto">
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="{Binding PatientName}"
                               FontAttributes="Bold" />
                        <Label Grid.Row="1" Grid.Column="0"
                               Text="{Binding PhysicianName}" />
                        <Label Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                               Text="{Binding Date, StringFormat='{}{0:MM/dd/yyyy}'}"
                               HorizontalOptions="End"
                               Margin="8,0" />

                        <StackLayout Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Orientation="Horizontal" Spacing="8">
                            <Button Text="Edit" Command="{Binding EditCommand}" />
                            <Button Text="Delete" Command="{Binding DeleteCommand}" />
                        </StackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>
