<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="App.Clinic.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:App.Clinic.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="True">
    
    <ShellContent
        Title="Patients"
        ContentTemplate="{DataTemplate local:PatientManagementPage}"
        Route="PatientManagement" />
        
    <ShellContent
        Title="Physicians"
        ContentTemplate="{DataTemplate local:PhysicianManagementPage}"
        Route="PhysicianManagement" />
        
    <ShellContent
        Title="Appointments"
        ContentTemplate="{DataTemplate local:AppointmentPage}"
        Route="AppointmentPage" />
</Shell>
